@model IEnumerable<Vidly2026.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Customers List</h2>

@Html.ActionLink("Add Customer", "New", null, new { @class = "btn btn-primary", style = "margin-bottom: 15px" })

@if (!Model.Any())
{
    <p>We don't have any customers yet</p>
}
else
{
    <table id="customers" class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Customer</th>
                <th>Discount Rate</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in @Model)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@Html.ActionLink(customer.Name, "Details", new { Id = customer.Id }, new { @class = "nav-link" })</td>
                    <td>@customer.MembershipType.Name</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { Id = customer.Id }, new { @class = "btn btn-primary" })
                        <button data-customer-id="@customer.Id" class="btn btn-danger js-delete">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#customers").DataTable();


            $("#customers").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this customer?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/customers/" + button.attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });
    </script>
}