@model IEnumerable<Vidly2026.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@Html.ActionLink("Add Customer", "New", "", new { @class = "nav-link btn btn-link text-primary", style= "width: 150px; margin-bottom: 15px" })

@if (!Model.Any())
{
    <text>We don't have any customers yet</text>
}
else
{
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Customer</th>
                <th>Discount Rate</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in @Model)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@Html.ActionLink(customer.Name, "Details", new { Id = customer.Id }, new { @class = "nav-link" })</td>
                    <td>@customer.MembershipType.Name</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { Id = customer.Id }, new { @class = "nav-link btn btn-link text-info" })
                    </td>
                    <td>
                        @using (@Html.BeginForm("Delete", "Customers", null, FormMethod.Post, new { onSubmit= "return confirm('Are you sure you want to delete this customer?');" }))
                        {
                            @Html.Hidden("Id", customer.Id)
                            <button type="submit" class="nav-link btn btn-link text-danger">Delete</button>                            
                        }
                    </td>
                </tr>
            }
        </tbody>    
    </table>
}
