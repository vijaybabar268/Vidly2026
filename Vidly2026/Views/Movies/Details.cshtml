@model Vidly2026.Models.Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @string.Format("{0: dd/MM/yyyy}", @Model.ReleaseDate)</li>
    <li>Date Added: @string.Format("{0: dd/MM/yyyy}", @Model.DateAdded)</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>