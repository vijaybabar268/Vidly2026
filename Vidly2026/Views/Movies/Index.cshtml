@model IEnumerable<Vidly2026.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Movies List</h2>

@Html.ActionLink("Add Movie", "New", null, new { @class = "nav-link btn btn-link text-primary", style = "width: 150px; margin-bottom: 15px" })

@if (!Model.Any())
{
    <text>We don't have any movies yet</text>
}
else
{
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Movie</th>
                <th>Genre</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in @Model)
            {
                <tr>
                    <td>@movie.Id</td>
                    <td>@Html.ActionLink(movie.Name, "Details", new { Id = movie.Id }, new { @class = "nav-link" })</td>
                    <td>@movie.Genre.Name</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { Id = movie.Id }, new { @class = "nav-link btn btn-link text-info" })
                    </td>
                    <td>
                        @using (@Html.BeginForm("Delete", "Movies", null, FormMethod.Post, new { onSubmit = "return confirm('Are you sure you want to delete this movie?');" }))
                        {
                            @Html.Hidden("Id", movie.Id)
                            <button type="submit" class="nav-link btn btn-link text-danger">Delete</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}



