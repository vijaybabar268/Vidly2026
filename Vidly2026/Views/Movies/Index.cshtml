@model IEnumerable<Vidly2026.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (!Model.Any())
{
    <text>We don't have any movies yet</text>
}
else
{
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Movie</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in @Model)
            {
                <tr>
                    <td>@movie.Id</td>
                    <td>@Html.ActionLink(movie.Name, "Details", new { Id = movie.Id }, new { @class = "nav-link" })</td>
                </tr>
            }
        </tbody>
    </table>
}



