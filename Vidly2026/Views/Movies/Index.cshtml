@model IEnumerable<Vidly2026.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Movies List</h2>

@Html.ActionLink("Add Movie", "New", null, new { @class = "btn btn-primary", style = "margin-bottom: 15px" })

@if (!Model.Any())
{
    <p>We don't have any movies yet</p>
}
else
{
    <table id="movies" class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Movie</th>
                <th>Genre</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in @Model)
            {
                <tr>
                    <td>@movie.Id</td>
                    <td>@Html.ActionLink(movie.Name, "Details", new { Id = movie.Id }, new { @class = "nav-link" })</td>
                    <td>@movie.Genre.Name</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { Id = movie.Id }, new { @class = "btn btn-primary" })
                        <button data-movie-id="@movie.Id" class="btn btn-danger js-delete">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable();


            $("#movies").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this movie?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/movies/" + button.attr("data-movie-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });
    </script>
}


