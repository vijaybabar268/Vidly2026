@model IEnumerable<Vidly2026.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Movies List</h2>

@if (!Model.Any())
{
    <p>We don't have any movies yet</p>
}
else
{
    <table id="movies" class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in @Model)
            {
                <tr>
                    <td>@movie.Id</td>
                    <td>@Html.ActionLink(movie.Name, "Details", new { Id = movie.Id }, new { @class = "nav-link" })</td>
                    <td>@movie.Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#movies").DataTable();

        });
    </script>
}


